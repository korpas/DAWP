
{% extends '::base.html.twig' %}

{% block headTitle %}{{ titulo }}{% endblock %}

{% block body %}
    <div class="product-container" >
        {% for inn in messages %}
            <span id="{{ inn.id }}">
        {% include ':messages:incontent.html.twig' %}
        </span>
        {% endfor %}

        <a class="btn btn-default btn-xxl" href ="{{ path('fos_user_profile_show') }}">Volver a perfil</a>
        <a class="btn btn-default btn-xxl" href="{{ path('app_messages_indexOut') }}">Bandeja de Salida</a>
    </div>
    {% if not doPagination is defined %}
        <div class="navigation ">
            {{ knp_pagination_render(messages) }}
        </div>
    {% endif %}
{% endblock %}