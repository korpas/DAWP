
{% extends '::base.html.twig' %}

{% block headTitle %}{{ titulo }}{% endblock %}

{% block body %}
    <div class="product-container" >
        {% for out in messages %}
            <span id="{{ out.id }}">
        {% include ':messages:outcontent.html.twig' %}
        </span>
        {% endfor %}


        <a class="btn btn-default btn-xxl" href ="{{ path('fos_user_profile_show') }}">Volver a perfil</a>
        <a class="btn btn-default btn-xxl" href="{{ path('app_messages_indexIn') }}">Bandeja de entrada</a>
