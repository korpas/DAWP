<div class="rounded-box margin-bottom-lg" style="border-color:orange">


        <div class="panel panel-warning">
            <div class="panel-heading">
                <h3 class="panel-title">{{ product.productname }}</h3><h3 style="float:right" class="panel-tile">{% if product.owner == app.user or is_granted('ROLE_ADMIN') %}
                        {# {% if is_granted('EDIT', product) %}#}

                        <a href="{{ path('app_products_edit', {'id': product.id}) }}"><img src="{{ asset('icons/glyphicons-151-edit.png') }}" alt="editar-publicacion" /></a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_products_remove', {'id': product.id}) }}"><img src="{{ asset('icons/glyphicons-198-remove.png') }}" alt="borrar-publicacion" /></a>
                        {% endif %}

                    {% endif %}</h3>
            </div>
            <div class="panel-body">
                <strong>Author:</strong> <a href="{{ path('app_products_byUser', {'username': product.owner.username}) }}">@{{ product.owner }}</a>
                <a style="margin-top: 0"></a><a style="color: inherit; text-decoration: inherit;" href="{{ path('app_products_show', {'id': product.id}) }}"></a><a href="{{ path('app_products_show', {'id': product.id}) }}">{{ product.id }}</a>


                <div>

                    <strong>Descripci√≥n:</strong> {{ product.description}}
                    <strong>Precio:</strong> {{ product.price}}
                    <strong>Created:</strong> {{ product.createdAt|date("d/m/Y H:i:s") }}
                    <strong>Updated:</strong> {{ product.updatedAt|date("d/m/Y H:i:s") }}
                    <div style="border-top:1px solid #DDD; padding-top: 10px;">
                        <img style="width: 140px; height: 140px;" data-src="holder.js/140x140" src="/images/upload/{{ product.imageName }}" title="{{ product.prodFile }}" class="img-rounded" alt="140x140">

                    </div>
                </div>

            </div>
        </div>

            {% for cat in product.categories %}
                <a class="btn btn-warning btn-xs" href="{{ path('app_products_byCategory', {'categoryname': cat.categoryname}) }}">{{ cat }}</a>
            {% endfor %}
        <div style="clear: both"></div>
    </div>









